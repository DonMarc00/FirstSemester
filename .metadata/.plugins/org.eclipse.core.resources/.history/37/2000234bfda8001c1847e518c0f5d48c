package task1;

import java.awt.event.KeyEvent;
import java.awt.event.WindowEvent;
import java.awt.Color;
import java.awt.Container;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.KeyAdapter;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.WindowConstants;

@SuppressWarnings("serial")
public class CWindow extends JFrame {
	
	static CLabel test = new CLabel("GUIs sind prima!");;
	CPanel panel;
	JFrame frame = new JFrame();

	public CWindow() {
		
		super("Aufgabe 1");

		setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);
		
		test.setVisible(true);
		test.setBounds(200, 60, 200, 15);
		
		panel = new CPanel(Color.black, 300,300);
		panel.setVisible(true);
		add(panel);
		panel.add(test);
		addKeyListener(new ColorKeyListener());
		pack();
		setVisible(true);
		
		
	
		
	}

	public void windowClosing(WindowEvent e) {
		System.exit(0);
	}
	
	public static CLabel getCLabel() {
		return test;
	}
	
}

class ColorKeyListener extends KeyAdapter{
	
	CLabel label ;
	
	public ColorKeyListener() {
		label = CWindow.getCLabel();
	}
	
	public void getColorKey(KeyEvent e) {
		if(e.getKeyCode() == KeyEvent.VK_R) {
			label.setForeground(Color.RED);
		} else if (e.getKeyCode() == KeyEvent.VK_G) {
			label.setForeground(Color.GREEN);
		} else if (e.getKeyCode() == KeyEvent.VK_B) {
			label.setForeground(Color.BLUE);
		}
	}
	
	public CLabel getCLabel() {
		return label;
	}
	

}